<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/card_view" android:layout_margin="5dp" app:cardBackgroundColor="#ADD8E6
" app:cardCornerRadius="12dp" app:cardElevation="3dp" app:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="361dp"
        android:layout_height="94dp"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/cardCheck"
            android:layout_width="44dp"
            android:layout_height="54dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardText"
            android:layout_width="199dp"
            android:layout_height="42dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/cardCheck"
            app:layout_constraintStart_toEndOf="@+id/cardCheck"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cardEditbt"
            android:layout_width="34dp"
            android:layout_height="63dp"

            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintLeft_toRightOf="@+id/cardText"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cardDeletebt"
            android:layout_width="35dp"
            android:layout_height="63dp"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintLeft_toRightOf="@+id/cardEditbt"

            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>